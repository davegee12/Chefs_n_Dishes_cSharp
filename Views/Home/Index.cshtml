<h1 style="text-align: center;">
    Chefs | <a href="/dishes">Dishes</a>
</h1>
<a href="/new/chef"><button class="btn btn-primary">Add a Chef</button></a>

<u><h3>Check out our roster of Chefs!</h3></u>

<table class="table table-dark">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col"># of Dishes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chef in @ViewBag.AllChefs)
        {
            <tr>
            <th scope="row">@chef.ChefId</th>
            <td>@chef.FName @chef.LName</td>
            <td>@chef.Age</td>
            <td>@chef.CreatedDishes.Count</td>
            </tr>
        }
    </tbody>
</table>